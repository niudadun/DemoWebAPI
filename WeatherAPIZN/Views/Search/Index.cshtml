                                <thead>
                                    <tr>
                                        <th data-field="Location" data-sortable="false">Location</th>
                                        <th data-field="Time" data-sortable="false">Time</th>
                                        <th data-field="Wind" data-sortable="false">Wind</th>
                                        <th data-field="Visibility" data-sortable="false">Visibility</th>
                                        <th data-field="Conditions" data-sortable="false">Sky conditions</th>
                                        <th data-field="Temperature" data-sortable="false">Temperature</th>
                                        <th data-field="Humidity" data-sortable="false">Relative Humidity</th>
                                        <th data-field="Pressure" data-sortable="false">Pressure</th>
                                    </tr>
                                </thead>
                            </table>*@
                            <div id="retrieveWeather" class="alert alert-primary" role="alert" style="visibility: hidden">
                                Loading Weather from API...
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="col-lg-4">
            <script id="Tokyo" src="https://hotelscombinedwidgetzhengniu.azurewebsites.net/lib/jquery/src/HotelsCombinedZhengNiu.js"></script>
        </div>
        <!-- /.row -->
    </div>
</div>

<script src="~/Scripts/main.js"></script>
