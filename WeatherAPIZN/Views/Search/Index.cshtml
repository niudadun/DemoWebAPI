
@{
    ViewBag.Title = "Index";
}

<div class="container-full">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Settings</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Setting Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="space20"></div>
                            <form role="form">
                                <div class="form-group">
                                    <label>Country Name</label>
                                    <div class="space5"></div>
                                    <input id="country" class="form-control">
                                </div>
                                <div id="retrieveCities" style="visibility: hidden">
                                    Loading a list of cities...
                                </div>
                                <div class="form-group">
                                    <label>City</label>
                                    <div class="space5"></div>
                                    <select id="city" class="form-control"></select>
                                </div>
                            </form>
                            <div class="col-lg-4 ">

                                <div class="col-lg-12" style="padding:5px; ">
                                    <button id="searchWeather" type="submit" class="btn btn-primary">Search</button>

                                </div>
                                <div class="col-lg-12" style="padding:5px; ">
                                    <button id="clearinput" type="submit" class="btn btn-primary">Clear</button>

                                </div>
                            </div>

                        </div>
                        <div class="col-lg-8">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="col-sm-4">Location</th>
                                        <td id="Location"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Time</th>
                                        <td id="Time"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Wind</th>
                                        <td id="Wind"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Visibility</th>
                                        <td id="Visibility"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Sky conditions</th>
                                        <td id="Conditions"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Temperature</th>
                                        <td id="Temperature"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Relative Humidity</th>
                                        <td id="Humidity"></td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Pressure</th>
                                        <td id="Pressure"></td>
                                    </tr>
                                </tbody>
                            </table>
