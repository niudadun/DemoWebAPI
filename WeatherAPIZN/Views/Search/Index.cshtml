
@{
    ViewBag.Title = "Index";
}

<div class="container-full">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Settings</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Setting Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="space20"></div>
                            <form role="form">
                                <div class="form-group">
                                    <label>Country Name</label>
                                    <div class="space5"></div>
                                    <input id="country" class="form-control">
                                </div>
                                    <div id="retrieveCities" style="visibility: hidden">
                                        Loading a list of cities...
                                    </div>
                                <div class="form-group">
                                    <label>City</label>
                                    <div class="space5"></div>
                                    <select id="city" class="form-control"></select>
                                </div>
                            </form>
                            <div class="col-lg-8 ">
                                <button id="searchWeather" type="submit" class="btn btn-primary">Search</button>
                                <button id="clearinput" type="submit" class="btn btn-primary">Clear</button>
                            </div>

                        </div>
                        <div class="col-lg-8">
                            <table id="table" height="300">
                                <thead>
                                    <tr>
                                        <th data-field="Location" data-sortable="false">Location</th>
                                        <th data-field="Time" data-sortable="false">Time</th>
                                        <th data-field="Wind" data-sortable="false">Wind</th>
                                        <th data-field="Visibility" data-sortable="false">Visibility</th>
                                        <th data-field="Conditions" data-sortable="false">Sky conditions</th>
                                        <th data-field="Temperature" data-sortable="false">Temperature</th>
                                        <th data-field="Humidity" data-sortable="false">Relative Humidity</th>
                                        <th data-field="Pressure" data-sortable="false">Pressure</th>
                                    </tr>
                                </thead>
                            </table>
                            <div id="retrieveWeather" class="alert alert-primary" role="alert" style="visibility: hidden">
                                Loading Weather from API
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>

<script src="~/Scripts/main.js"></script>
